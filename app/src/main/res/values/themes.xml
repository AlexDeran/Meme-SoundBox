<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="SBTheme" parent="SBTheme.Base">

    </style>

    <style name="Theme.Design.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/black</item>
    </style>

    <!-- Design values for the toolbar/actionbar -->
    <style name="SBTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorSecondaryInverse">@color/white</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/PopupMenuTextSmall</item>
        <item name="android:textAppearanceLargePopupMenu">@style/PopupMenuTextLarge</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="21">@color/black</item>
    </style>

    <!-- Design values for the popupmenu -->
    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/grey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Design values for the popupmenu -->
    <style name="PopupMenuTextSmall" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- Design values for the popupmenu -->
    <style name="PopupMenuTextLarge" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

</resources>